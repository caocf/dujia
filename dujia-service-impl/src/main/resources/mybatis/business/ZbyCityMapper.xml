    <!-- 查询线路最多的前20个城市-->
    <select id="queryCityByLineCount" resultMap="simpleResultMap">
      SELECT COUNT(*) sort, c.*
      FROM zby_product p, zby_city c
      WHERE p.city_id = c.city_id
      GROUP BY p.city_id
      ORDER BY sort DESC
      LIMIT 20
    </select>

    <!-- 查询热门城市-->
    <select id="queryHotCity" resultMap="simpleResultMap">
       SELECT
            *
        FROM
            zby_city
        WHERE
            is_hot = 0
    </select>

    <!-- 查询可用线路大于24的城市列表-->
    <select id="queryAllCity" resultMap="simpleResultMap">
      SELECT
            *
        FROM
            (
                SELECT
                    count(*) AS ct,
                    p.city_id,
                    p.city_name,
                    p.city_pinyin
                FROM
                    zby_product p
                GROUP BY
                    p.city_id
                ORDER BY
                    ct DESC
            ) AS k
        WHERE
            k.ct > 24
    </select>

    <!-- 根据线路更新城市，如果城市下有线路则城市表状态=1，否则=0-->
    <update id="updateCityStatus">
        UPDATE zby_city ct SET
        ct.is_delate =
        CASE WHEN ct.city_id IN
        (SELECT p.city_id  FROM zby_product p
        -- WHERE p.is_delete =0
        GROUP BY p.city_id )
        THEN 1
        ELSE 0
        END
    </update>
    
    <select id="queryCityByNameOrPinYin" resultMap="simpleResultMap" parameterType="cn.com.gome.dujia.model.ZbyCity">
        SELECT city_id,city_name,city_pinyin FROM zby_city t
        WHERE 1=1
		<if test="cityName != null and cityName != '' ">
			and ( city_name like CONCAT(#{cityName,jdbcType=VARCHAR},'%') 
			or city_pinyin like CONCAT(#{cityName,jdbcType=VARCHAR},'%')
            or city_py like CONCAT(#{cityName,jdbcType=VARCHAR},'%'))
		</if>
    </select>


    <select id="queryCityIdByCityPy" resultMap="BaseResultMap" parameterType="java.lang.String">
        SELECT
