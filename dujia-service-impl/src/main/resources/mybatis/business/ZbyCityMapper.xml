            city_pinyin = #{cityPy}
        OR city_py = #{cityPy}
    </select>

    <select id="selectCity" resultMap="BaseResultMap" parameterType="cn.com.gome.dujia.model.ZbyCity">
        SELECT * FROM zby_city
        WHERE 1=1
